{
  "name": "hail-on-dnanexus",
  "title": "hail-on-dnanexus",
  "summary": "hail-on-dnanexus",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "python_hail_script",
      "label": "Python Hail Script",
      "help": "Python script to execute in place of jupyter lab",
      "class": "file",
      "optional": true,
      "patterns": ["*.py"]	
    },
    {
      "name": "parameters",
      "label": "Miscellaneous Parameters",
      "help": "A env var to call within scripts to access data",
      "class": "string",
      "optional": true,
      "patterns": ["*"]	
    },
    {
      "name": "bash_script",
      "label": "Bash Script",
      "help": "Bash script to execute prior to computation",
      "class": "string",
      "optional": true,
      "patterns": ["*"]	
    }
  ],
  "outputSpec": [],
  "httpsApp": {
      "shared_access":"NONE",
      "ports": [
        8081,443,8080
      ]
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "execDepends" : [
      {"name": "fuse"}
    ],
    "interpreter": "bash",
    "file": "src/hail-on-dnanexus.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ],
    "allProjects": "VIEW",
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x8",
	  "clusterSpec": {
            "type": "dxspark",
	    "version": "3.2.0",
	    "initialInstanceCount": 1,
	    "bootStrapScript":"src/startup.sh"
          }
        }
      }
    }
  }
}
